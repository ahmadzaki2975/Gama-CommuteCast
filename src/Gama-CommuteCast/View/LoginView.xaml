<Window
    x:Class="Gama_CommuteCast.View.LoginView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Gama_CommuteCast.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="LoginView"
    Width="800"
    Height="550"
    AllowsTransparency="True"
    Background="Transparent"
    MouseDown="Window_MouseDown"
    ResizeMode="CanMinimize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Border CornerRadius="20">
        <Border.Background>
            <ImageBrush ImageSource="/resources/img/tayogama-balairung.jpeg" Stretch="UniformToFill" />
        </Border.Background>

        <Border
            Background="{StaticResource UGM-Blue}"
            BorderThickness="2"
            CornerRadius="15"
            Opacity="0.95">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Offset="0.0" Color="{StaticResource UGM-Color-Blue}" />
                    <GradientStop Offset="1.0" Color="{StaticResource UGM-Color-Blue}" />
                    <GradientStop Offset="0.75" Color="{StaticResource UGM-Color-Yellow}" />
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="25" />
                        <ColumnDefinition Width="25" />
                        <ColumnDefinition Width="5" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Margin="20,0,0,0"
                        VerticalAlignment="Center"
                        FontFamily="Montserrat"
                        FontSize="12"
                        Foreground="{StaticResource UGM-White}"
                        Text="Login" />

                    <Button
                        x:Name="btnMinimize"
                        Grid.Column="1"
                        Background="Green"
                        BorderThickness="0"
                        Click="BtnMinimize_OnClick"
                        Content="-"
                        FontFamily="Montserrat"
                        FontSize="20"
                        Cursor="Hand"
                        Foreground="{StaticResource UGM-White}">

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border
                                    Width="18"
                                    Height="18"
                                    CornerRadius="9"
                                    Background="{TemplateBinding Background}">
                                    <ContentPresenter
                                        VerticalAlignment="Top"
                                        HorizontalAlignment="Center"></ContentPresenter>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button
                        x:Name="btnClose"
                        Grid.Column="2"
                        Background="Red"
                        BorderThickness="0"
                        Click="BtnClose_OnClick"
                        Content="x"
                        FontFamily="Montserrat"
                        FontSize="12"
                        Cursor="Hand"
                        Foreground="{StaticResource UGM-White}" >

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border
                                    Width="18"
                                    Height="18"
                                    CornerRadius="9"
                                    Background="{TemplateBinding Background}">
                                    <ContentPresenter
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"></ContentPresenter>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>

                <StackPanel Width="450"
                            Grid.Row="2"
                            Orientation="Vertical"
                            Margin="0 15 0 0 ">
                    <Image Source="/resources/img/gama-commutecast.png" Width="250" Height="100" />
                    
                    <TextBlock Margin="0 10 0 0"
                               FontFamily="Montserrat"
                               FontSize="13"
                               FontStyle="Italic"
                               HorizontalAlignment="Center"
                               Foreground="{StaticResource UGM-White}"
                               Text="Locally Rooted, Digitally Tracked."></TextBlock>

                    <TextBlock
                        Margin="0 20 0 0"
                        FontFamily="Montserrat"
                        FontSize="15"
                        FontWeight="Normal"
                        Foreground="{StaticResource UGM-White}"
                        Text="Username" />

                    <TextBox
                        x:Name="xtUsername"
                        FontFamily="Montserrat"
                        FontSize="15"
                        Height="30"
                        Foreground="{StaticResource UGM-White}"
                        Background="{StaticResource UGM-Blue}"
                        BorderBrush="{StaticResource UGM-White}"
                        CaretBrush="{StaticResource UGM-White}"
                        BorderThickness="0 0 0 1"
                        Margin="0 5 0 0"
                        VerticalContentAlignment="Center"
                        Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBlock
                        Margin="0 20 0 0"
                        FontFamily="Montserrat"
                        FontSize="15"
                        FontWeight="Normal"
                        Foreground="{StaticResource UGM-White}"
                        Text="Password" />

                    <PasswordBox
                        x:Name="xtPassword"
                        FontFamily="Montserrat"
                        FontSize="15"
                        Height="30"
                        Foreground="{StaticResource UGM-White}"
                        Background="{StaticResource UGM-Blue}"
                        BorderBrush="{StaticResource UGM-White}"
                        CaretBrush="{StaticResource UGM-White}"
                        BorderThickness="0 0 0 1"
                        Margin="0 5 0 0"
                        VerticalContentAlignment="Center"/>

                    <Button
                        x:Name="btnLogin"
                        BorderThickness="0"
                        Click="BtnLogin_OnClick"
                        Content="Login"
                        FontFamily="Montserrat"
                        FontSize="20"
                        Cursor="Hand"
                        Padding="0 10 0 0"
                        Margin="0 30 0 0">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="{StaticResource UGM-Yellow}"></Setter>
                                <Setter Property="Foreground" Value="{StaticResource UGM-White}"></Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource UGM-White}"></Setter>
                                        <Setter Property="Foreground" Value="{StaticResource UGM-Yellow}"></Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border
                                    Width="Auto"
                                    Height="50"
                                    CornerRadius="5"
                                    Background="{TemplateBinding Background}">
                                    <ContentPresenter
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"></ContentPresenter>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                </StackPanel>

            </Grid>
        </Border>
    </Border>
</Window>
